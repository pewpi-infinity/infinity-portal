#!/data/data/com.termux/files/usr/bin/bash
echo "ðŸ›‘  Stopping all running Python processes..."
for pid in $(ps -aux | grep python | grep -v grep | awk '{print $2}'); do
  kill -9 $pid 2>/dev/null && echo "Killed process $pid"
done
echo "âœ…  All Python processes stopped."
# --- Infinity add-on: auto-clear Flask port ---
if command -v lsof >/dev/null 2>&1; then
    lsof -ti :8080 2>/dev/null | xargs -r kill -9
fi
if command -v ss >/dev/null 2>&1; then
    ss -lptn "sport = :8080" 2>/dev/null \
      | awk 'NR>1 {match($6,/pid=([0-9]+)/,m); if (m[1]) print m[1]}' \
      | xargs -r kill -9
fi
echo "âœ… Infinity pee-kill add-on: Port 8080 cleared."

